---
import { Picture } from "astro:assets";
import Logo from "assets/logo.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import openbar from "../data/openbar.json";

export interface HeroAction {
  href: string,
  icon: string,
  text: string
}

export interface Hero {
  title: string;
  description: string;
  action: HeroAction
}

interface Props {
  hero: Hero;
}
const { hero } = Astro.props;
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-1">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={Logo}
      alt="BarG Pasticceria"
      widths={[800, 1600, 2400]}
      sizes="(max-width: 500px) 50vw, 410px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-4xl lg:text-4xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter">
      {hero.title}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {hero.description}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href={hero.action.href}
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name={hero.action.icon} />
        {hero.action.text}
      </Link>
    </div>
  </div>
</main>
