---
export interface Image {
  src: string;
  alt: string;
}

interface Props {
  gallery: Image[];
}
const { gallery } = Astro.props;
---

<div class="slider-container">
  <div class="slider">
    {gallery.map((image, index) => (
      <img src={image.src} alt={image.alt} class="slider-image" />
    ))}
    {gallery.map((image, index) => (
      <img src={image.src} alt={image.alt} class="slider-image" />
    ))}
  </div>
</div>

<style>
.slider-container {
  overflow: hidden;
  width: 100%;
  height: 300px; /* Fixed height for the slider */
  position: relative;
  margin-top: 2rem; /* Add some spacing from the main content */
  margin-bottom: 96px; /* Add padding at the bottom */
}

.slider {
  display: flex;
  animation: scroll 20s linear infinite;
}

.slider-image {
  width: auto;
  height: 300px; /* Same height as the container */
  margin-right: 10px; /* Spacing between images */
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}
</style>
